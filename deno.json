{
  "tasks": {
    "dev": "deno run -A --unstable-kv --unstable-temporal --watch src/main.ts",
    "start": "deno run -Ar --unstable src/main.ts",
    "deploy": "fly deploy",
    "status": "fly status"
  },
  "imports": {
    "@/": "./src/",
    "hono": "jsr:@hono/hono@~4.5.1",
    "@std/dotenv": "jsr:@std/dotenv@~0.224.0",
    "isbot": "npm:isbot",
    "kysely": "npm:kysely",
    "@db/sqlite": "jsr:@db/sqlite",
    "@soapbox/kysely-deno-sqlite": "jsr:@soapbox/kysely-deno-sqlite",
    "@notionhq/client": "npm:@notionhq/client",
    "notion-to-md": "npm:notion-to-md",
    "markdown-it": "npm:markdown-it",
    "highlight.js": "npm:highlight.js"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  },
  "fmt": {
    "semiColons": false,
    "include": ["src/"]
  }
}
